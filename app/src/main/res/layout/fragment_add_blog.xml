<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.blog.addblog.AddBlogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userPhoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/basil" />

            <EditText
                android:id="@+id/edt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userPhoto"
                android:background="@android:color/transparent"
                android:hint="Judul Blog"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_title"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:hint="Ceritakan Pengalaman Anda..."
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_inputImgBlog"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/edt_desc"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/gallery" />

            <LinearLayout
                android:id="@+id/addPhoto_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_inputImgBlog"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_add_photo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/plus" />

                <TextView
                    android:id="@+id/tv_add_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Tambah Foto"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_post"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/addPhoto_button"
                android:layout_gravity="right"
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Post"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>